extends ../pug/layout.pug

block meta
  meta(name='description', content='Крафтовый квас')
  title КВАСТ

//- block append head
//-   link(rel='stylesheet', href='css/some.css')

block header
  +logo('/', 'page-header__logo')
    img.logo__img(src='/img/logo.svg', alt='Кваст')
  +main-nav()
  p.page-header__slogan Крафтовый квас всему голова!

block content
  h1.visually-hidden Крафтовый квас Кваст
  +new-products()
  +features()
  +history()
  +press()
  +assortment()
  +order()
    +form('order__form','POST','/')
      +field-text({
        label: 'Представьтесь:',
        side: 'up',
        classes: 'form__field',
        attrs: {
          name: 'name'
        }
      })
      +field-text({
        label: 'Номер телефона:',
        side: 'up',
        classes: 'form__field',
        attrs: {
          name: 'phone',
          type: 'tel',
          pattern: '\\+7\\s[0-9]{3}\\s[0-9]{3}\\s[0-9]{2}\\s[0-9]{2}',
          placeholder: '+7 XXX XXX XX XX'
        }
      })
      +field-text({
        label: 'Доп. номер:',
        side: 'up',
        classes: 'form__field',
        attrs: {
          name: 'second phone',
          type: 'tel',
          pattern: '\\+7\\s[0-9]{3}\\s[0-9]{3}\\s[0-9]{2}\\s[0-9]{2}',
          placeholder: '+7 XXX XXX XX XX'
        }
      })
      +field-text({
        label: 'Email:',
        side: 'up',
        classes: 'form__field',
        attrs: {
          name: 'email',
          type: 'email'
        }
      })

      +field-select('Объём заказа:', 'quantity', 'form__field')
      +field-text({
        label: 'Доп. комментарий:',
        side: 'up',
        isTextarea: true,
        classes: 'form__field',
        attrs: {
          name: 'textarea'
        }
      })
      +checkbox([
        {
          title: 'Я согласен получать квасную рассылку',
          classes: 'form__field',
          attrs: {
            name: 'mail',
          }
        },
      ])
      +btn('Отправить заказ', 'form__btn', true)
  p Содержимое. #[a(href='blocks-demo.html') Библиотека блоков].
  svg(width='64', height='64')
    use(xlink:href='img/sprite.svg#logo')
  svg.svg-test(width='32', height='32')
    use(xlink:href='img/sprite.svg#icon-heart')



  +radio([
    {
      title: 'Радиокнопка1',
      helpText: 'Подсказка',
      classes: 'kek kek1 kek2',
      attrs: {
        name: 'radio',
      }
    },
  ])

  .testpicture hi

block footer
  p «Подвал»
  p Контактный телефон: #[a(href='tel:+70000000000') +7 000 000 00 00]

