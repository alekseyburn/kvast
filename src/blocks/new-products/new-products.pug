//- Все примеси в этом файле должны начинаться c имени блока (new-products)

mixin new-products(classes)

  //- Принимает:
  //-   classes    {string} - список классов
  //- Вызов:
        +new-products('some-class')

  -
    // список модификаторов
    let allClasses = '';
    if(typeof(classes) !== 'undefined' && classes) {
      for (let item of classes.split(',')) {
        allClasses = allClasses + item.trim();
      }
    }

  section(class=`${allClasses.length > 0 ?`${allClasses} `: `` }new-products`)&attributes(attributes)
    h2.section__title.new-products__title Новинки
    article.new-products__article
      h3.section__title.new-products__name Вахтёр
      table.new-products__table
        tr
          td Алк.
          td < 1%
        tr
          td Ккал
          td 35
      p.new-products__composition Ржаной хлеб, Вода, Солод, Соль
      picture
        source(type='image/webp', srcset='../img/bottle-left@1x.webp 1x, ../img/bottle-left@2x.webp 2x')
        img.new-products__img(width='319', height='459', src='../img/bottle-left@1x.jpg', srcset='../img/bottle-left@2x.jpg 2x', alt='Вахтёр')
      p.new-products__description Терпкий и мощный, вкус этого кваса взбодрит после тяжёлого дня и придаст сил для вечерних приключений!
      +btn('Подробнее','new-products__link')(href='/')
      +btn('Купить','new-products__buy-link')(href='/', class='btn--dark')
      b.new-products__price 150 Р.
    article.new-products__article
      h3.section__title.new-products__name Романтик
      table.new-products__table
        tr
          td Алк.
          td < 0,5%
        tr
          td Ккал
          td 27
      p.new-products__composition Ячменный хлеб, Вода, Солод, Апельсин
      picture
        source(type='image/webp', srcset='../img/bottle-right@1x.webp 1x, ../img/bottle-right@2x.webp 2x')
        img.new-products__img(width='319', height='459', src='../img/bottle-right@1x.jpg', srcset='../img/bottle-right@2x.jpg 2x', alt='Романтик')
      p.new-products__description Лёгкий и освежающий напиток поможет сохранять отличное настроение в течение всего дня.
      +btn('Подробнее','new-products__link')(href='/')
      +btn('Купить','new-products__buy-link')(href='/', class='btn--dark')
      b.new-products__price 90 Р.
