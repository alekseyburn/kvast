//- Все примеси в этом файле должны начинаться c имени блока (copyright)

mixin copyright(classes)

  //- Принимает:
  //-   classes    {string} - список классов
  //- Вызов:
        +copyright('some-class')

  -
    // список классов
    let allClasses = '';
    if(typeof(classes) !== 'undefined' && classes) {
      for (let item of classes.split(',')) {
        allClasses = allClasses + item.trim();
      }
    }

  div(class=`${allClasses.length > 0 ?`${allClasses} `: `` }copyright`)&attributes(attributes)
    a.copyright__link(href='https://htmlacademy.ru/', target='_blank', rel='noopener noreferrer')
      picture
        source(type='image/webp', srcset='img/htmlacademy.webp')
        img.copyright__img(src='img/htmlacademy.png', width='27', height='34', alt='Html Academy')
    b.copyright__text Разработчик:&nbsp;
    span.copyright__company HTML Academy
